<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sheyuan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">
    
    <com.xiaoma.customview.CustomProgress
        android:layout_width="60dp"
        android:layout_height="60dp"
        sheyuan:firstColor="@color/red"
        sheyuan:secondColor="@color/colorPrimary"
        sheyuan:progressWidth="8dp"
        sheyuan:mySpeed="13"
        />


    <com.xiaoma.shapeview.ShapeView
        android:layout_marginTop="16dp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:padding="16dp"
        sheyuan:title="@string/shapetitle"
        sheyuan:titlecolor="@color/red"
        sheyuan:titlesize="48dp" />

    <com.xiaoma.shapeview.CustomImgText
        android:padding="8dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingRight="8dp"
        sheyuan:img="@mipmap/ic_launcher"
        sheyuan:imgtitle="@string/longtitle"
        sheyuan:imgtitlecolor="@color/red"
        sheyuan:imgtitlesize="24dp"
        sheyuan:scaleType="centerCrop"
        />

    <com.xiaoma.shapeview.CustomImgText
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        sheyuan:img="@mipmap/ic_launcher"
        sheyuan:imgtitle="@string/longtitle"
        sheyuan:imgtitlecolor="@color/red"
        sheyuan:imgtitlesize="24dp"
        sheyuan:scaleType="centerCrop"
        />


</LinearLayout>